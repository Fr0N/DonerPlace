            <h1>Your orders</h1>
            <div class="orders">
                <form method="post">
                {{#each orders}}
                    <div class="order">
                        <span class="order-time">{{this.creationDate}}</span>
                        <span class="order-name">{{this.product.category}} doner, {{this.product.size}} cm</span>
                        <span class="order-status">
                            <select name="{{this._id}}" selected="Pending">
                                <option selected="selected" value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="In Transit" selected>In Transit</option>
                                <option value="Delivered">Delivered</option>
                            </select>
                        </span>
                        <a href="/orderDetails/{{this._id}}" class="button order-button">Details</a>
                    </div>
                {{else}}
                    </br>
                    <h2>No orders</h2>
                {{/each}}
                <input type="submit" value="Save Changes" class="button" style="border:0">
                </form>
            </div>