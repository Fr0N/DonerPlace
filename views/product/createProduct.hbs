<form method="post">
			  <h2>Create Product</h2>
			  <div>
				<label for="category">Category</label>
				<select name="category" id="category">
				  <option value="Beef">Beef</option>
				  <option value="Chicken">Chicken</option>
				  <option value="Lamb">Lamb</option>
				</select>
			  </div>
			   <div>
				<label for="imageUrl">Image Url</label>
				<input id="imageUrl" name="imageUrl" type="text">
			  </div>
			  <div>
				<label for="size">Size</label>
				<input id="size" name="size" type="number" min="17" max="24" step="1">
			  </div>
			  <div>
				<strong>Toppings</strong><br>
				<textarea name="toppings" placeholder="Toppings should be provided as comma-separated list. Example: (pickle, tomato, onion, lettuce)!!!"></textarea>
			  </div>
			  <div>
				<input type="submit" value="Create" class="button" style="border:0"/>
			  </div>
			</form>